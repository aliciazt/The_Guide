<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:height="24dp"
    android:width="24dp"
    android:viewportWidth="24"
    android:viewportHeight="24"
    android:background="@drawable/balloon_bg">

    <ImageView
        android:layout_width="400px"
        android:layout_height="200px"
        android:id="@+id/imagen_w"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo_w"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:fontFamily="cursive"
            android:text="nombre de cualquier marcador"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tipo_w"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginBottom="20dp"
            android:textSize="13dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="tipo de cualquier marcador"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/costo_w"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="monospace"
            android:layout_marginBottom="20dp"
            android:textSize="15dp"
            android:text="costo:si/no de museos"/>

    </LinearLayout>

</LinearLayout>