<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/balloon_bg">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/logo_opt"
        android:id="@+id/imagen_w"
        android:layout_marginTop="25dp"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo_w"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:fontFamily="cursive"
            android:text="nombre de cualquier marcador"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:id="@+id/tipo_w"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginBottom="20dp"
            android:textSize="13dp"
            android:fontFamily="monospace"
            android:text="tipo de cualquier marcador"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/costo_w"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="monospace"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp"
            android:textSize="15dp"
            />

    </LinearLayout>

</LinearLayout>